<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Title and Close Icon Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">
                <TextView
                    android:id="@+id/dropdownDialogTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <ImageButton
                    android:id="@+id/dropdownDialogClose"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:contentDescription="Close"
                    android:tint="@color/black"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dropdownTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusBottomEnd="28dp"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/dropdownSearchEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search..."
                    android:inputType="text"
                    android:textSize="22sp"
                    android:padding="22dp"
                    android:textColor="@android:color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="#E0E0E0"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dropdownRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:padding="18dp"/>

            <!-- Empty state message -->
            <TextView
                android:id="@+id/dropdownEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp"
                android:text="No items found."
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:visibility="gone"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout> 